{
  "version": 2,
  "buildCommand": "npm install --prefix client && npm run build --prefix client",
  "outputDirectory": "client/build",
  "routes": [
    { "src": "/api/auth/register", "dest": "/api/auth/register.js" },
    { "src": "/api/auth/login", "dest": "/api/auth/login.js" },
    { "src": "/api/auth/verify", "dest": "/api/auth/verify.js" },
    { "src": "/api/workouts/([^/]+)", "dest": "/api/workouts/[id].js?id=$1" },
    { "src": "/api/workouts/?$", "dest": "/api/workouts/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
