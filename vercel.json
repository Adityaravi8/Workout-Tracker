{
  "framework": "create-react-app",
  "buildCommand": "npm install --prefix client && npm run build --prefix client",
  "outputDirectory": "client/build",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
